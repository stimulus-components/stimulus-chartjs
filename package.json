  "license": "MIT",
  "homepage": "https://github.com/stimulus-components/stimulus-chartjs",
  "private": false,
  "main": "dist/stimulus-chartjs.umd.js",
  "module": "dist/stimulus-chartjs.es.js",
  "scripts": {
